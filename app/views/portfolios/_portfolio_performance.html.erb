<%# Portfolio Performance Section %>
<div id="portfolio_performance" class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Portfolio Performance</h3>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Current Value</p>
      <p class="text-2xl font-bold text-gray-900 dark:text-white">
        <%= number_to_currency(portfolio.total_value) %>
      </p>
    </div>

    <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Return</p>
      <p class="text-2xl font-bold <%= portfolio.total_gain_loss >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
        <%= number_to_currency(portfolio.total_gain_loss) %>
      </p>
    </div>

    <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Return Percentage</p>
      <p class="text-2xl font-bold <%= portfolio.total_return >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
        <%= number_to_percentage(portfolio.total_return * 100, precision: 2) %>
      </p>
    </div>
  </div>
</div>