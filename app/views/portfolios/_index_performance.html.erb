<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Current Value</h3>
    <p class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white">
      <%= number_to_currency(portfolios.sum(&:total_value)) %>
    </p>
  </div>

  <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Return</h3>
    <p class="mt-1 text-3xl font-semibold <%= positive_negative_color_class(portfolios.sum(&:total_gain_loss)) %>">
      <%= number_to_currency(portfolios.sum(&:total_gain_loss)) %>
    </p>
  </div>

  <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Overall Return Percentage</h3>
    <p class="mt-1 text-3xl font-semibold <%= positive_negative_color_class(portfolios.sum(&:total_return) * 100) %>">
      <%= number_to_percentage(portfolios.sum(&:total_return) * 100, precision: 2) %>
    </p>
  </div>
</div>
