<%= turbo_frame_tag :content, data: { turbo_action: "advance", refresh: "morph" } do %>
  <%= render "investment_header", portfolio: @portfolio, investment: @investment %>
  <div class="container mx-auto px-4 py-8">
    <%= render "performance", investment: @investment %>

    <div class="mt-8">
      <%= render "transactions", portfolio: @portfolio, investment: @investment, transactions: @investment.transactions %>
    </div>

    <div class="mt-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Notes</h2>
        <%= link_to new_portfolio_investment_note_path(@portfolio, @investment), data: { turbo_frame: "modal" }, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            New Note
          </div>
        <% end %>
      </div>

      <div class="space-y-4">
        <% @notes.each do |note| %>
          <div class="p-4 bg-white rounded-lg shadow dark:bg-gray-800">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center space-x-2">
                <span class="px-2.5 py-0.5 text-xs font-medium <%= note.importance >= 4 ? 'text-red-800 bg-red-100 dark:bg-red-900 dark:text-red-300' : 'text-blue-800 bg-blue-100 dark:bg-blue-900 dark:text-blue-300' %> rounded">
                  Importance: <%= note.importance %>
                </span>
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  <%= time_ago_in_words(note.created_at) %> ago
                </span>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to edit_portfolio_investment_note_path(@portfolio, @investment, note), data: { turbo_frame: "modal" }, class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" do %>
                  <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                  </svg>
                <% end %>
                <%= button_to portfolio_investment_note_path(@portfolio, @investment, note), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this note?" }, class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" do %>
                  <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                  </svg>
                <% end %>
              </div>
            </div>
            <p class="text-gray-900 dark:text-white whitespace-pre-wrap"><%= note.content %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
