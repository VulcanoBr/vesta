<div id="flash-messages" data-turbo-temporary class="mb-4">
  <% flash.each do |type, message| %>
    <% alert_class = case type
                    when "notice" then "text-green-800 bg-green-50 dark:bg-gray-800 dark:text-green-400"
                    when "alert"  then "text-red-800 bg-red-50 dark:bg-gray-800 dark:text-red-400"
                    else "text-blue-800 bg-blue-50 dark:bg-gray-800 dark:text-blue-400"
                    end %>

    <div class="flex p-4 mb-4 text-sm rounded-lg <%= alert_class %>" role="alert">
      <svg class="flex-shrink-0 inline w-4 h-4 me-3 mt-[2px]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
      </svg>
      <span class="sr-only"><%= type.titleize %></span>
      <div>
        <%= message %>
      </div>
    </div>
  <% end %>
</div>
